<% provide(:title, @utilisateur.nom) %>

<div class="row">
  <aside class="col-md-4">
    <section class="info_utilisateur">
      <h1>
        <%= gravatar_for @utilisateur %>
        <%= @utilisateur.nom %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
  <% if @utilisateur.microposts.any? %>
    <h3>Microposts (<%= @utilisateur.microposts.count %>)</h3>
    <ol class="microposts">
      <%= render @microposts %>
    </ol>
    <%= will_paginate @microposts %>
  <% end %>
</div>
</div>